# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build server-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t server-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=53
ENV DEBUG_COLORS=TRUE

WORKDIR /app

RUN addgroup --system server-app && \
          adduser --system -G server-app server-app

COPY dist/apps/server-app server-app
RUN chown -R server-app:server-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix server-app --omit=dev -f install

CMD [ "node", "server-app" ]
